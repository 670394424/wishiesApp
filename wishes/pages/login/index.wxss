.login-container{
    width:100%;
    height:100%;
    position: relative;
}
.login-header{
    padding-top: 200rpx;
}
.login-header-img image{
    display: block;
    width:144rpx;
    height:144rpx;
    border-radius: 50%;
    margin:0 auto;
}
.kogin-header-title{
    font-size: 36rpx;
    text-align: center;
    margin-top: 20rpx;
}
.login-main{
    margin-top: 90rpx;
    padding: 0 40rpx;
}
.login-main input{
    display: inline-block;
    width:400rpx;
    line-height: 80rpx;
    font-size: 28rpx;
}
.login-inter{
    background: #fff;
    border-radius: 8rpx;
    padding: 0 32rpx;
}
.login-inter view{
    height:80rpx;
    line-height: 80rpx;
    display: flex;
    align-items: center;
}
.login-main-account{
    border-radius: 8rpx 8rpx 0 0;
    border-bottom: 1px solid #d8d8d8;
}
.login-inter text{
    line-height: 80rpx;
    font-size: 36rpx;
    margin: 0 40rpx 0 60rpx;
}
.login-main-btn{
    margin-top: 80rpx;
}
.login-hint{
    width:100%;
    color:#d2d2d2;
    position: absolute;
    bottom:90rpx;
    text-align: center;
}
